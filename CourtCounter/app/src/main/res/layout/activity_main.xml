<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.courtcounter.MainActivity">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team A"
            android:textColor="#000000"
            android:layout_marginLeft="55dp"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/score_teamA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:textSize="40dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingLeft="33dp"
            android:layout_marginLeft="14dp"
            android:paddingRight="40dp"
            android:layout_marginTop="20dp"
            android:onClick="Threepoint"
            android:text="+3 Points"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingLeft="33dp"
            android:layout_marginLeft="14dp"
            android:paddingRight="40dp"
            android:onClick="Twopoint"
            android:layout_marginTop="20dp"
            android:text="+2 Points"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="25dp"
            android:onClick="Freethrow"
            android:layout_marginTop="20dp"
            android:text="FREE THROW "/>


    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team B"
        android:textColor="#000000"
        android:layout_marginLeft="90dp"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/score_teamB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        android:textSize="40dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingLeft="26dp"
        android:paddingRight="40dp"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="20dp"
        android:onClick="Threepoint1"
        android:text="+3 Points"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingLeft="26dp"
        android:paddingRight="40dp"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="20dp"
        android:onClick="Twopoint1"
        android:text="+2 Points"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingLeft="30dp"
        android:paddingRight="25dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:onClick="Freethrow1"
        android:text="FREE THROW"/>


</LinearLayout>
</LinearLayout>
    <Button
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
        android:onClick="reset"
    android:text="Reset" />

    </RelativeLayout>
